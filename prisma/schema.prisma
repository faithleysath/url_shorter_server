generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "urls.db"
}

model ShortLink {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  expiresAt DateTime
  title     String?
  original  String
  short     String   @unique
  clicks    Int?     @default(0)
}